                <div class="pt-2">
                    <h2>@Model.CompName</h2>
                    <h3>@Model.CompCat</h3>
                </div>
            </nav>
        </div>
        <div class="row pt-5 pb-5 pl-5">
            <div class="pb-5">
                <div class="col-lg-3 card" style="display:inline-block">
                    <img class="rep-img" src="~/Dummy Data/Dummy.jpg" alt="John">
                    <h1><b>@Model.CompRep</b></h1>
                    <p class="title">Representative</p>
                    <p><i>@Model.CompName</i></p>
                    <p><button class="Contactbutton">Contact</button></p>
                </div>
            </div>

            <div class="col-lg-10 pl-5">
                <nav class="pt-3 pr-3 pl-3 detail-info">
                    <p>
                        <i>
                            <b>@Model.CompName</b> @Html.Raw(Model.CompDesc)
                        </i>
                    </p>
                    <p><b>Founded:</b> @Model.CompDOE</p>
                    <p><b>Email:</b> @Model.CompEmail</p>
                    <p><b>Contact:</b> @Model.CompCont</p>
                    <p><b>Address:</b>@Model.CompAddr</p>
                </nav>
            </div>
