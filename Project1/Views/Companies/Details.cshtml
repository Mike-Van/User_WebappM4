            BUSINEMATCH
        </a>
        <ul class="navbar-nav px-3">
            <li class="nav-item text-white">
                <a href="@Url.Action("Details", "Accounts", new { id = int.Parse(Session["UserId"].ToString()) })" title="Logged in as @Session["UserName"].ToString()" class="text-white">@Session["UserName"].ToString() <img src="~/Dummy Data/avatar.png" alt="Person" width="50" height="50"></a>
